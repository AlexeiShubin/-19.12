import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scan=new Scanner(System.in);
        System.out.print("Введите b:\nb=");
        int b= scan.nextInt();
        System.out.print("Введите с:\nc=");
        int c= scan.nextInt();
        int a=4*(b+c-1)/2;
        System.out.print("a=" + a);
    }
}
