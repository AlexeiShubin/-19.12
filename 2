import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.print("Введите двузначное число: ");
        int number= scan.nextInt();
        while(number<10||number>99){
            System.out.print("Неверное число!\nВведите двузначное: ");
            number= scan.nextInt();
        }
        byte one_number= (byte) (number%10);
        number=number/10;
        number+=one_number;
        System.out.print("сумма цифр числа равна " + number);
    }
}
