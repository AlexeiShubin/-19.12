import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        System.out.print("Введите трехзначное число: ");
        int number= scan.nextInt();
        while(number<100||number>999){
            System.out.print("Неверное число!\nВведите трехначное: ");
            number= scan.nextInt();
        }
        byte sum=0;
        for (int i=0; i<3; i++) {
            sum+= (byte) (number % 10);
            number=number/10;
        }
        System.out.print("сумма цифр числа равна " + sum);
    }
}
